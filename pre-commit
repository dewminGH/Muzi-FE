#!/bin/sh
# This script runs linting and tests before allowing a commit

echo "Running linting..."
yarn lint

echo "Running tests..."
yarn test

# If linting or tests fail, prevent the commit
if [ $? -ne 0 ]; then
  echo "Linting or tests failed, commit aborted"
  exit 1
fi

# If everything passes, allow the commit
exit 0
npm test
